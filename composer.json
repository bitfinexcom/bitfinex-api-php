{
    "name": "bfx/api-rest",
    "description": "Official Bitfinex REST v2 API interface",
    "keywords": [
        "bitfinex",
        "bfx",
        "bitcoin",
        "BTC"
    ],
    "homepage": "https://github.com/bitfinexcom/bitfinex-api-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vigan Abdurrahmani",
            "email": "vigan.abdurrahmani@bitfinex.com"
        },
        {
            "name": "Mykola Konovalov",
            "email": "mykola.k@code-care.pro"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/promises": "^1.5",
        "guzzlehttp/psr7": "^1.8.3 || ^2.1",
        "guzzlehttp/guzzle": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "BFX\\": "src/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix src",
        "test": "phpunit --testdox tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "^3.3"
    }
}
